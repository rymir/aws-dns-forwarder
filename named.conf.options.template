options {
        directory "/var/cache/bind";

        dnssec-enable yes;
        dnssec-validation yes;

        recursion yes;
        allow-query { any; };

        forwarders {
            DNSIP;
        };
        forward only;

        auth-nxdomain no;    # conform to RFC1035
        listen-on-v6 { none; };
};
